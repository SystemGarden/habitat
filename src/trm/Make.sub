SRC += 			\
trm/cmdln.c		\
trm/cursvu.c

INC += 			\
trm/cmdln.h		\
trm/cursvu.h

# Library product
ifeq ($(ARCH),Darwin)
TRMSOLIB = trm/libtrm.dylib
$(TRMSOLIB): $(patsubst %.c, %.o, $(filter trm/%.c, $(SRC))) \
			-lreadline -lcurses -liiab -lreadline
	$(LINK.o) -install_name @rpath/$(notdir $@) $^ -o $@ -dynamiclib
else
TRMSOLIB = trm/libtrm.so
$(TRMSOLIB): $(patsubst %.c, %.o, $(filter trm/%.c, $(SRC)))
	$(LINK.o) $^ -o $@ -shared #pg -a
endif

SOLIB += $(TRMSOLIB)
